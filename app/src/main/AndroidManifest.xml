<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.ololo.stip" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".StipApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_section1" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".InventoryDetailActivity"
            android:label="@string/title_activity_inventory_detail" >
        </activity>
        <activity
            android:name=".VendorsActivity"
            android:label="@string/title_activity_vendrors" >
        </activity>
        <activity
            android:name=".CustomerDetailActivity"
            android:label="@string/title_activity_customer_detail" >
        </activity>
        <activity
            android:name=".AddTaskActivity"
            android:label="@string/title_activity_add_task" >
        </activity>
        <activity
            android:name=".ChooseCustomerActivity"
            android:label="@string/select_customer" >
        </activity>
        <activity
            android:name=".ChooseInventoryActivity"
            android:label="@string/title_activity_choose_inventory" >
        </activity>
    </application>

</manifest>
